                <br>

            </div>
        </div>
        <div class="form-group row" style="display: flex;justify-content: center">
            <div class="col-md-6">
            </div>
        </div>
        <div class="form-group row" style="display: flex;justify-content: center">

            <div>
                <button type="submit" class="btn btn-primary btn-block"style="position:relative;right:10%">Salvar</button>
            </div>

            <div>
                <a class="btn btn-secondary btn-block" style="position:relative;left:20%"href="/condpag">Voltar</a>
            </div>
        </div>
        </div>

        <script src="/js/bootstrap/bootstrap.js"></script>
