<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
    <title>Sales Mobile 1.0</title>
    <link rel="stylesheet" href="/css/fontawesome-all.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
</head>


<body style="overflow: hidden;">
    <header>
        <% include ../partials/header %>
    </header>
    <div class="container-fluid formulario">
        <div class="form-group row">
            <div class="col-md-5">
            </div>
            <h2 style="border-bottom: 1px #c5c5c5 solid;">Dados da Empresa</h2>
        </div>
    </div>
    <style>
        table#empresatabela thead {
            position: fixed;

        }
    </style>
    <div style="overflow: auto " class="container-fluid">
        <table class="table table-striped table-dark table-sm" style="font-size: 12px">
            <thead>
                <tr>
                    <th>Cod</th>
                    <th></th>
                    <th>Raz√£o</th>
                    <th></th>
                    <th>Fantasia</th>
                    <th></th>
                    <th>CNPJ</th>
                    <th></th>
                    <th>Ins Est</th>
                    <th>Fone</th>
                    <th>Cel</th>
                    <th>E-mail</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th>Banco</th>
                    <th>Ag</th>
                    <th>C/C</th>
                    <th>Altera</th>
                    <th>Deleta</th>
                </tr>
            </thead>

        </table>
    </div>

    <div style="overflow: auto; width: 1340px; height: 460px; border:solid 1px" class="container-fluid">
        <table class="table table-striped table-bordered" id="empresatabela">

            <tbody>
                <% for (emp of empresa){%>

                <tr>
                    <td>
                        <%= emp.emp_codigo%>
                    </td>
                    <td>
                        <%= emp.emp_razao%>
                    </td>
                    <td>
                        <%= emp.emp_fantasia%>
                    </td>

                    <td>
                        <%= emp.emp_cnpj%>
                    </td>

                    <td>
                        <%= emp.emp_inscEst%>
                    </td>
                    <td>
                        <%= emp.emp_fone%>
                    </td>
                    <td>
                        <%= emp.emp_celular%>
                    </td>
                    <td>
                        <%= emp.emp_email%>
                    </td>
                    <td>
                        <%= emp.emp_banco%>
                    </td>
                    <td>
                        <%= emp.emp_agencia%>
                    </td>
                    <td>
                        <%= emp.emp_conta%>
                    </td>


                    <td><a class="btn btn-warning" href=<%="/empresa/" + emp.emp_codigo%>>Alterar</a>
                    </td>
                    <td><a class="btn btn-danger" href=<%="/empresa/excluir/" + emp.emp_codigo%>>Deletar</a>
                    </td>
                </tr>
                <%}%>

            </tbody>
        </table>
    </div>

    <script src="/js/bootstrap.js"></script>
</body>

</html>