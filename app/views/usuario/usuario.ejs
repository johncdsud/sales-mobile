    <style>
        table#usuariotabela thead {
            position: fixed;

        }
    </style>

    <div style="overflow: auto; width: 720px" class="container-fluid">
        <table class="table table-striped table-dark table-sm">

            <thead>
                <tr>
                    <th>Cod</th>
                    <th>Nome</th>
