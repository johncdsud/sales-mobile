<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
    <title>Sales Mobile 1.0</title>
    <link rel="stylesheet" href="/css/fontawesome-all.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
</head>

<body style="overflow: hidden;">
    <header>
        <% include ../partials/header %>
    </header>
    <div class="container-fluid formulario">
        <div class="form-group row">
            <div class="col-md-5">
            </div>
            <h4 style="border-bottom: 3px #c5c5c5 solid;">Usu√°rios do Sistema</h4>
        </div>
    </div>
    <style>
        table#usuariotabela thead {
            position: fixed;

        }
    </style>

    <div style="overflow: auto " class="container-fluid">
        <table class="table table-striped table-dark table-sm">

            <thead>
                <tr>
                    <th>Cod</th>
                    <th>Nome</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th>User</th>
                    <th></th>
                    <th>Senha</th>
                    <th>E-mail</th>
                    <th></th>
                    <th></th>
                    <th>Fone</th>
                    <th></th>
                    <th></th>
                    <th>Cod</th>
                    <th>Altera</th>
                    <th>Deleta</th>


                </tr>
            </thead>

        </table>
    </div>


    <div style="overflow: auto; width: 1340px; height: 460px; border:solid 1px " class="container-fluid">
        <table class="table table-striped table-bordered" id="usuariotabela">


            <tbody>
                <% for (user of usuario){%>

                <tr>
                    <td>
                        <%= user.user_codigo%>
                    </td>
                    <td>
                        <%= user.user_nome%>
                    </td>
                    <td>
                        <%= user.user_usuario%>
                    </td>
                    <td>
                        <%= user.user_senha%>
                    </td>
                    <td>
                        <%= user.user_email%>
                    </td>
                    <td>
                        <%= user.user_celular%>
                    </td>
                    <td>
                        <%= user.user_codcelular%>
                    </td>

                    <td><a class="btn btn-warning" href=<%="/usuario/" + user.user_codigo%>>Alterar</a> </td>
                    <td><a class="btn btn-danger" href=<%="/usuario/excluir/" + user.user_codigo%>>Deletar</a>
                    </td>
                </tr>
                <%}%>
            </tbody>
        </table>
    </div>

    <script src="/js/bootstrap.js"></script>
</body>

</html>