<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body style="overflow: hidden;">
    <header>
        <% include ../partials/header %>
    </header>

    <div class="container-fluid formulario">
        <div class="form-group row">
            <div class="col-md-4">
            </div>
            <h2 style="border-bottom: 1px #c5c5c5 solid;">Movimento Entrada no Estoque</h2>
        </div>

        <form action="/estoqueEntrada/novo" method="post">
            <div class="form-group row" style="position:relative;left:03%">
                <div class="col-md-1">
                </div>
                <div class="col-md-2">
                    <label for="datamov">Data Movimento</label>
                    <input type="date" class="form-control" id="datamov" name="movest_dataent" value="<%=moment().format('YYYY-MM-DD')%>">
                </div>

                <div class="col-md-1">
                    <label for="pedido">Pedido</label>
                    <input type="number" maxlength="200" class="form-control" id="pedido" name="movest_pedido"
                        placeholder="NÂº">
                </div>

                <div class="col-md-4">
                    <label for="prod_codigo">Produto</label>
                    <select class="form-control custom-select" name="prod_codigo" id="prod_codigo">
                        <% for (prod of produto){%>
                        <option value="<%= prod.prod_codigo%>" id="codigo-produto-<%= prod.prod_codigo%>">
                            <%= prod.prod_nome%>
                        </option>
                        <%}%>
                    </select>
                </div>

                <div class="col-md-1">
                    <label for="Qtde">Qtde</label>
                    <input type="number" class="form-control" id="qtde" name="qtde" placeholder="000">
                </div>
                <div class="col-md-1">
                    <label for="Custo">Custo</label>
                    <input type="money" class="form-control" id="item_custo" name="item_custo" placeholder="R$0.00">
                </div>
            </div>
            <div class="form-group row" style="position:relative;left:38%">
                <div class="col-md-1">
                    <button type="button" class="btn btn-primary btn-block" onclick="incluirItemEstoque()">Incluir</button>
                </div>
                <div class="col-md-1">
                    <a class="btn btn-success btn-block" onclick="salvar()">Salvar</a>
                </div>
                <div class="col-md-1">
                    <a class="btn btn-warning btn-block" onclick="imprimir()">Imprimir</a>
                </div>
            </div>
        </form>

        <div class="container-fluid formulario">
            <div class="form-group row">
                <div class="col-md-5">
                </div>
            </div>
        </div>
        <div style="overflow: auto; width: 700px; height: 400px; border: 1px" class="container-fluid">
            <table class="table table-striped table-bordered" id="moventtabela">
                <THEAD>
                    <tr>
                        <th>Pedido</th>
                        <th>Produto</th>
                        <th>Qtde</th>
                        <th>Custo</th>
                        <th>Deleta</th>
                    </tr>
                </thead>
                <tbody id="tbody-movEstoque">
                    </thead>
                </tbody>
            </table>
        </div>

        <script src="/js/bootstrap/bootstrap.js"></script>
        <script src="/js/estoqueEntrada/novoEstoqueEntrada.js"></script>
</body>

</html>