<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
    <title>Sales Mobile 1.0</title>
    <link rel="stylesheet" href="/css/fontawesome-all.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
</head>

<body style="overflow: hidden;">
    <header>
        <% include ../partials/header %>
    </header>
    <div class="container-fluid formulario">
        <div class="form-group row">
            <div class="col-md-5">
            </div>
            <h4 style="border-bottom: 3px #c5c5c5 solid ">Produtos</h4>
        </div>
    </div>
    <style>
        table#produtotabela thead {
            position: fixed;

        }
    </style>
    <div style="overflow: auto " class="container-fluid">
        <table class="table table-striped table-dark table-sm">

            <thead>
                <tr>
                    <th>Cod</th>
                    <th>Nome</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th>Descrição</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th>Tipo</th>
                    <th>Ativo</th>
                    <th>M.E</th>
                    <th>NCM</th>
                    <th>R$ C</th>
                    <th>R$ V</th>
                    <th>Tipo</th>
                    <th></th>
                    <th></th>
                    <th>Marca</th>
                    <th>Alterar</th>
                    <th>Deletar</th>
                </tr>
            </thead>

        </table>
    </div>



    <div style="overflow: auto; width: 1340px; height: 460px; border:solid 1px " class="container-fluid" id="produtotabela">
        <table class="table table-striped table-bordered " id="produtotabela">


            <tbody>

                <% for (prod of produto){%>

                <td>
                    <%= prod.prod_codigo%>
                </td>
                <td>
                    <%= prod.prod_nome%>
                </td>
                <td>
                    <%= prod.prod_descricao%>
                </td>
                <td>
                    <%= prod.prod_tipo%>
                </td>
                <td>
                    <%= prod.prod_ativoinativo%>
                </td>
                <td>
                    <%= prod.prod_movestoque%>
                </td>
                <td>
                    <%= prod.prod_ncm%>
                </td>
                <td>
                    <%= prod.prod_custo%>
                </td>
                <td>
                    <%= prod.prod_venda%>
                </td>
                <td>
                    <%= prod.prod_tipo2%>
                </td>
                <td>
                    <%= prod.marca_nome%>
                </td>
                <td><a class="btn btn-warning" href=<%="/produto/" + prod.prod_codigo%>>Alterar</a> </td>
                <td><a class="btn btn-danger" href=<%="/produto/excluir/" + prod.prod_codigo%>>Deletar</a> </td>
                </tr>
                <%}%>
            </tbody>
        </table>
    </div>



    <script src="/js/bootstrap.js"></script>
</body>

</html>